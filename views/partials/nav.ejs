<link rel="stylesheet" href="/styles/variable.css">
<link rel="stylesheet" href="/styles/nav.css">
<div id="nav" class="nav_div">
    <nav class="nav">
        <h1>Logo</h1>
        <ul class="desktop_nav">
            <a class="a" href="/">Home</a>
            <a class="a" href="/about">About</a>
            <a class="a" href="/about">What we do</a>
            <a class="a" href="/contact_us">Contact</a>
        </ul>
        <a class="donate_btn_nav" href="#donate_section">Donates</a>

    </nav>
</div>
<%- include('fab.ejs')%>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            delay: 0, // values from 0 to 3000, with step 50ms
            duration: 1000
        });
    </script>
    <style>
        .fab-container{
            visibility: hidden;
        }
        @media only screen and (max-width: 600px) {
            .fab-container {
                visibility: visible;
            }

            .nav ul,
            .right_section {
                display: none;
            }

            .nav {
                justify-content: space-between;
            }

            .left_section {
                justify-content: center;
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .btns {
                flex-wrap: nowrap;
                justify-content: space-between;
                width: 90%;
                justify-self: center;
            }
        }
    </style>
    <script>

        const nav = document.getElementById('nav');
        const contact_nav = document.querySelector('.nav');
        window.addEventListener('load', (e) => {
            contact_nav.classList.add('contact_nav');
        })
        window.addEventListener('scroll', (e) => {
            if (window.pageYOffset > 1) {
                nav.classList.add('active_nav')
            } else {
                nav.classList.remove('active_nav')
            }
        })
    </script>